<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-xl-4 col-lg-5 col-md-8 col-sm-10 mx-auto mt-5">
    
    <h1 class="text-center mb-4 display-6 fw-bold text-primary">Sign Up</h1>
    
    <div class="card shadow-lg p-4 mb-5 bg-white rounded-3">
      <div class="card-body">
        
        <form 
          action="/users/signup" 
          method="post" 
          novalidate 
          class="needs-validation"
          enctype="multipart/form-data" 
        >
          
          <div class="mb-3">
            <label for="username" class="form-label fw-bold">Username</label>
            <input
              name="username"
              id="username"
              type="text"
              class="form-control"
              placeholder="Choose a unique username"
              required
              autofocus
            />
            <div class="invalid-feedback">Please choose a username.</div>
          </div>
          
          <div class="mb-3">
            <label for="email" class="form-label fw-bold">Email</label>
            <input
              name="email"
              id="email"
              type="email"
              class="form-control"
              placeholder="Enter your email"
              required
            />
            <div class="invalid-feedback">Please enter a valid email.</div>
          </div>
          
          <div class="mb-4">
            <label for="password" class="form-label fw-bold">Password</label>
            <input
              name="password"
              id="password"
              type="password"
              class="form-control"
              placeholder="Create a strong password"
              required
            />
            <div class="invalid-feedback">Password cannot be empty.</div>
          </div>

          <hr class="my-4">
          <h5 class="mb-3 text-secondary">Profile Details (Optional)</h5>

          <div class="mb-3">
            <label for="firstName" class="form-label fw-bold">First Name</label>
            <input
              name="profile[firstName]" 
              id="firstName"
              type="text"
              class="form-control"
              placeholder="Enter your first name"
            />
          </div>

          <div class="mb-3">
            <label for="lastName" class="form-label fw-bold">Last Name</label>
            <input
              name="profile[lastName]" 
              id="lastName"
              type="text"
              class="form-control"
              placeholder="Enter your last name"
            />
          </div>
          
          <div class="mb-3">
            <label for="location" class="form-label fw-bold">Location</label>
            <input
              name="profile[location]" 
              id="location"
              type="text"
              class="form-control"
              placeholder="E.g., New Delhi, India"
            />
          </div>

          <div class="mb-3">
            <label for="bio" class="form-label fw-bold">Bio</label>
            <textarea
              name="profile[bio]" 
              id="bio"
              class="form-control"
              placeholder="Tell us a little about yourself and your travel style"
              rows="3"
            ></textarea>
          </div>

          <div class="mb-4">
            <label for="profilePicture" class="form-label fw-bold">Profile Picture</label>
            <input 
              class="form-control" 
              type="file" 
              id="profilePicture" 
              name="profilePicture"
            >
          </div>
          
          <div class="d-grid">
            <button class="btn btn-primary btn-lg mt-2 fw-bold rounded-pill">
              Register
            </button>
          </div>
          
        </form>
        
      </div>
    </div>
    
  </div>
</div>